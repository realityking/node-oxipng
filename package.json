{
  "name": "node-oxipng",
  "description": "Native module for oxipng",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/realityking/node-zopflipng.git"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=22.11.0"
  },
  "keywords": [
    "png",
    "oxipng",
    "compress",
    "image",
    "node-addon-api"
  ],
  "author": {
    "name": "Rouven Wessling",
    "url": "https://github.com/realityking"
  },
  "main": "lib/oxipng.js",
  "types": "lib/oxipng.d.ts",
  "exports": {
    ".": {
      "require": "./lib/oxipng.js",
      "import": "./lib/oxipng.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "CHANGELOG.md",
    "src",
    "lib",
    "prebuilds",
    "build.rs",
    "Cargo.toml"
  ],
  "scripts": {
    "build": "napi build --release --platform --js=false prebuilds",
    "build:debug": "napi build --platform --js=false prebuilds",
    "lint": "eslint",
    "test": "ava"
  },
  "napi": {
    "name": "node-oxipng"
  },
  "dependencies": {
    "@napi-rs/cli": "^2.18.4",
    "is-png": "^2.0.0"
  },
  "tsd": {
    "directory": "test"
  },
  "devDependencies": {
    "ava": "^6.2.0",
    "eslint": "^9.18.0",
    "eslint-plugin-ava": "^15.0.1",
    "neostandard": "^0.12.0",
    "sharp": "^0.33.5"
  }
}
